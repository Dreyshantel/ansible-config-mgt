pipeline {
    agent any

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/deploy/ansible.cfg"
    }
    parameters {
        string(name: 'inventory', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
    }

    stages {
        stage('Initial cleanup') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Dreyshantel/ansible-config-mgt.git'
            }
        }

        stage('Prepare Ansible For Execution') {
            steps {
                sh '''
                    echo "WORKSPACE: ${WORKSPACE}"

                    # Verify ansible.cfg exists
                    if [ -f "${WORKSPACE}/deploy/ansible.cfg" ]; then
                        echo "Found ansible.cfg — ensuring roles_path is correct..."

                        # If roles_path exists, update it; if not, add it
                        if grep -q "^roles_path=" "${WORKSPACE}/deploy/ansible.cfg"; then
                            sed -i "s|^roles_path=.*|roles_path=${WORKSPACE}/roles|" "${WORKSPACE}/deploy/ansible.cfg"
                        else
                            sed -i "3 a roles_path=${WORKSPACE}/roles" "${WORKSPACE}/deploy/ansible.cfg"
                        fi

                        echo "Updated ansible.cfg:"
                        cat "${WORKSPACE}/deploy/ansible.cfg"
                    else
                        echo "ansible.cfg missing — please check your repo structure"
                    fi
                '''
            }
        }

        stage('Test SSH Connections') {
            steps {
                script {
                    def allHosts = [
                        'ubuntu@172.31.2.9',
                        'ec2-user@172.31.2.111',
                        'ec2-user@172.31.2.109',
                        'ec2-user@172.31.2.188'
                    ]
                    sshagent(['private-key']) {
                        allHosts.each { host ->
                            sh "ssh -o StrictHostKeyChecking=no ${host} exit || echo 'SSH failed for ${host}'"
                        }
                    }
                }
            }
        }

        stage('Run Ansible playbook') {
            steps {
                sshagent(['private-key']) {
                    ansiblePlaybook(
                        become: true,
                        credentialsId: 'private-key',
                        disableHostKeyChecking: true,
                        installation: 'ansible',
                        inventory: "${WORKSPACE}/inventory/${inventory}",
                        playbook: "${WORKSPACE}/playbooks/site.yml"
                    )
                }
            }
        }

        stage('Clean Workspace after build') {
            steps {
                cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenUnstable: true, deleteDirs: true)
            }
        }
    }
}

